@model StoreSampel.UI.Models.AccountViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Main Navigation-->
<style>
    #intro {
        background-image: url(https://mdbootstrap.com/img/new/fluid/city/008.jpg);
        height: 100vh;
    }



    .navbar .nav-link {
        color: #fff !important;
    }
</style>


<!-- Background image -->
<div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.8);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5 col-md-8">
                    <form asp-action="Register" class="bg-white  rounded-5 shadow-5-strong p-5">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- fullname input -->
                        <div class="form-outline mb-4">
                            <input  id="form1Example1" asp-for="FullName" class="form-control" />
                            <label class="form-label" for="form1Example1" asp-for="FullName"></label>
                        </div>
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="form1Example1" asp-for="Email" class="form-control" />
                            <label class="form-label" for="form1Example1" asp-for="Email"></label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="form1Example2" asp-for="Password" class="form-control" />
                            <label class="form-label" for="form1Example2" asp-for="Password"></label>
                        </div>
                        <!-- rePassword input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="form1Example2" asp-for="RePassword" class="form-control" />
                            <label class="form-label" for="form1Example2" asp-for="RePassword"></label>
                        </div>


                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block">ثبت نام در سایت</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Background image -->
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}