@model StoreSampel.UI.Models.AccountViewModel.SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    

<!--Main Navigation-->
<style>
    #intro {
        background-image: url(https://mdbootstrap.com/img/new/fluid/city/008.jpg);
        height: 100vh;
    }



    .navbar .nav-link {
        color: #fff !important;
    }
</style>


<!-- Background image -->
<div id="intro" class="bg-image shadow-2-strong">
    <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.8);">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5 col-md-8">
                    <form asp-action="Login" class="bg-white  rounded-5 shadow-5-strong p-5">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="form1Example1" asp-for="UserName" class="form-control"/>
                            <label class="form-label" for="form1Example1">نام کاربری را وارد کنید</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="form1Example2" asp-for="Password" class="form-control"/>
                            <label class="form-label" for="form1Example2">گذرواژه را وارد کیند</label>
                        </div>

                        <!-- 2 column grid layout for inline styling -->
                        <div class="row mb-4">
                            <div class="col d-flex justify-content-center">
                                <!-- Checkbox -->
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="RememberMe"  />
                                    <label class="form-check-label" asp-for="RememberMe">
                                      
                                    </label>
                                </div>
                            </div>


                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block">ورود به سایت</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Background image -->
