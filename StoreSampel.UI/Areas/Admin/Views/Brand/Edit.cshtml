@model StoreSampel.UI.Areas.Admin.ViewModel.BrandViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>  "@Model.Name"ویرایش برند</h1>

<form action="/admin/brand/Edit" method="post" class="row g-3 needs-validation">
    <div asp-validation-summary="All" class=" text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-outline">
        <input type="text" id="form1" asp-for="Name" class="form-control form-control-lg" />
        <label class="form-label" for="form1" asp-for="Name"></label>
    </div>
    <div class="col-12">
        <button class="btn btn-primary float-end" type="submit">ویرایش</button>
    </div>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
